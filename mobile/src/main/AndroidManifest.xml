<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.scu.d9nguyen.calc_lorie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CuisineActivity" />
        <activity android:name=".MealActivity" />
        <activity android:name=".CalorieInfoActivity" />
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".BarcodeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".AndroidWearSyncActivity" />
    </application>

</manifest>